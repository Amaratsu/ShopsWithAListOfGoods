@model IEnumerable<WebApplication2.Models.Shop>

@{
    ViewBag.Title = "List of shops";
}

<h2 class="text-center">Список магаинов</h2>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>Название магазина</th>
            <th>Адрес магазина</th>
            <th>Время работы магазина</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Mode</td>
                <td>
                    <button class="btn btn-primary btn-xs btnClick" data-toggle="modal" data-target=".bs-example-modal-lg-@item.Id" id="@item.Id">Товары магазина</button>
                    
                    <div class="modal fade bs-example-modal-lg-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content content">
                                @item.Id
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/IndexPage/Index.js"></script>
}
